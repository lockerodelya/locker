# Basic redirects for odelya.online
RewriteEngine On

# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.odelya\.online [NC]
RewriteRule ^(.*)$ https://odelya.online/$1 [L,R=301]

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://odelya.online/$1 [L,R=301]

# Remove .html extension and fix duplicate content
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# Redirect .html URLs to clean URLs (optional but good)
RewriteCond %{THE_REQUEST} \s/([^.]+)\.html [NC]
RewriteRule ^ /%1 [R=301,L]
